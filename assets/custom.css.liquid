/* css for the product listing section  */

/* this selects the product name in the electric bike page */

.sf__product-listing.sf__col-1 a {
  font-size: clamp(23px, 4vw, 39px) !important;
}

.sf__product-listing.sf__col-2 a {
  font-size: clamp(19px, 3vw, 39px) !important;
}

.sf__product-listing.sf__col-3 a {
  font-size: clamp(16px, 3vw, 27px) !important;
}

.sf__product-listing.sf__col-4 a {
  font-size: clamp(13px, 2vw, 23px) !important;
}

.sf__product-listing.sf__col-5 a,
.sf__product-listing.sf__col-5 .sf__pcard-price *{
  font-size: clamp(13px, 2vw, 23px) !important;
}

/* applicable to entire site */

.section__heading{
  /* font-size: 47px !important; */
  font-size: clamp(13px, 12vw, 67px) !important;
  white-space: nowrap;
  padding: 0px;
  padding-top: 32px;
  text-align: center;
}

.section__header{
  display: flex;
  justify-content: center;
}

.sf__btn{
  margin: 8px 0px 8px 0px;
}

.sf__btn-primary, .sf__btn-white{
  box-shadow: 4px 4px 2px black;
}

/* css for product components  */

.sf__pcard-name {
  text-align: center;
  font-size: clamp(13px, 4vw, 33px);
  font-weight: bold;
}

.money {
  font-size: clamp(19px, 3vw, 33px);
}

.prod__price{
  display: flex;
  align-items: start;
}

.f-price-item{
  display: flex;
  align-items: center;
  justify-content: center;
  border: solid 0px red;
}

/* [data-products-container] .f-price-item{
  border: 1px solid red;
} */

.sf__variant-swatch {
  width: 32px;
  height: 32px;
}


/* css for "what hero are you" section*/

.content__heading{
  font-family: 'Bebas neue';
  font-weight: normal;
  font-size: clamp(19px, 8vw, 58px) !important;
}

.content__box{
  height: 100%;
}

.sf-custom__image-with-text{
  height: 100%;
}

.sf-custom__grid{
  height: 100%;
}

.content_box{
  justify-content: space-between !important;
}

/* custom class added to the liquid code */
.product-h3 > *{
  height: clamp(40px, 10vw, 80px) !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.all-bike-collection-description{
  font-size: 16px;
}

