<script>
document.addEventListener("DOMContentLoaded", function () {
    const openPopupButton = document.getElementById("openPopup");
    const popupContainer = document.getElementById("popupContainer");
    const closePopupButton = document.getElementById("closePopup");

    openPopupButton.addEventListener("click", function () {
        popupContainer.style.opacity = "1"; /* Change opacity to 1 to show the popup */
        popupContainer.style.display = "block";
    });

    closePopupButton.addEventListener("click", function () {
        popupContainer.style.opacity = "0"; /* Change opacity to 0 to hide the popup */
        setTimeout(() => {
            popupContainer.style.display = "none";
        }, 300); /* Set a timeout to hide the container after the transition is complete */
    });
});


</script>